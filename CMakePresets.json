{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default-mingw",
      "displayName": "Default MinGW-w64 Config",
      "description": "Common settings for MinGW-w64 builds",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      },
      "toolchainFile": "C:/msys64/ucrt64/share/cmake/toolchain/x86_64-w64-mingw32.cmake"
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Build with debug information and no optimization.",
      "inherits": "default-mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Build with optimizations and no debug information.",
      "inherits": "default-mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Release with Debug Info",
      "description": "Optimized build with debug information.",
      "inherits": "default-mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build Debug",
      "configurePreset": "debug",
      "jobs": 10
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release",
      "jobs": 10
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Build RelWithDebInfo",
      "configurePreset": "relwithdebinfo",
      "jobs": 10
    }
  ]
}

